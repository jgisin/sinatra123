<!-- Tower -->

<%#
Hint: this should not be 0
This view needs the tower number to work!
The tower number can be 1, 2 or 3
Where can we get this number from???
%>
<% tower_number ||= 0 %>

<div class="tower tower-<%= tower_number %> col-xs-4">

  <p class="tower-number text-center"></p>

  <div class="disks row">

    <%#
    DO NOT REMOVE!!!!!
    Disks must be rendered below this
    to format the stacking of disks correctly
    %>
    <% (tower.length).times do |i| %>
      <div class="col-xs-12 tower">&nbsp;</div>
        <div class ="tower-<%= i %> tower_number"> <%=tower[i].length%>
    <% end %>
    <% tower.each_with_index do |tower, index|%>

          <% tower.each do |disk| %>
          <div class = "disk-<%=disk%>">
            <%= erb :disk, :locals => {:disk => disk} %>
          </div>
          <%end%>
        </div>
    <%end%>
    <%# Render me some disks? %>

  </div>

  <!-- disks -->

</div><!-- tower -->

